{
	"name": "whatsapp-server",
	"version": "1.0.0",
	"description": "WhatsApp notification server for customer updates - Message sending only",
	"main": "whatsapp-server.js",
	"type": "module",
	"scripts": {
		"start": "cross-env WHATSAPP_SERVER_PORT=3182 node whatsapp-server.js",
		"start:monitored": "cross-env WHATSAPP_SERVER_PORT=3182 node start.js",
		"dev": "cross-env WHATSAPP_SERVER_PORT=3182 node --watch whatsapp-server.js",
		"test": "node test-server.js",
		"restart": "pm2 restart whatsapp-server || npm start",
		"logs": "pm2 logs whatsapp-server || echo \"Not running with PM2\""
	},
	"dependencies": {
		"@hapi/boom": "^10.0.1",
		"@whiskeysockets/baileys": "^7.0.0-rc.9",
		"baileys": "^7.0.0-rc.9",
		"baileys-redis-auth": "^2.0.0",
		"dotenv": "^17.2.1",
		"express": "^5.1.0",
		"ioredis": "^5.9.3",
		"qrcode-terminal": "^0.12.0"
	},
	"devDependencies": {
		"cross-env": "^10.0.0",
		"pm2": "^5.3.0"
	},
	"keywords": [
		"whatsapp",
		"notifications",
		"api",
		"messaging"
	],
	"author": "",
	"license": "ISC",
	"engines": {
		"node": ">=18.0.0"
	}
}
